<!DOCTYPE html>
<html>
  <head>
    <title>Gerador de imagem</title>
    <%= stylesheet_link_tag 'image_generation', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main>
      <h1>Gerador de imagem</h1>
      <%= form_tag('/image_generation', method: :post, class: 'form_generation') do %>
        <%= text_field_tag('prompt', nil, placeholder: 'Descreva a imagem desejada') %>

        <%= submit_tag('Gerar imagem', class: 'button') %>
      <% end %>
      <div class="result">
        <!-- A imagem gerada serÃ¡ exibida aqui -->
      </div>
      <div id="loading" style="display: none">
        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div>
      </div>
      <div id="message"></div>
    </main>
    <%= javascript_pack_tag 'image_generations' %>
  </body>
</html>
